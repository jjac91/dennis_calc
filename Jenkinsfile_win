pipeline {
    agent any
    stages {
        stage('Clean') {
            steps {
                deleteDir()
            }
        }
        stage('Build') {
            steps {
                // Get some code from a GitHub repository
                git 'https://github.com/nlilaramani/Calc.git'

                    // Run Maven on a Windows agent.
                    //withMaven{
                    bat 'mvn -Dmaven.test.failure.ignore=true clean package'
                 //}

            // To run Maven on a Unix agent, use
            // sh "mvn -Dmaven.test.failure.ignore=true clean package"
            }
        }
        stage('Report') {
             steps {
                script {
                    // Run unit tests to generate JUnit results
                    echo "Running unit tests and generating JUnit results"
                    sh "mvn test"
                    // Generate code coverage reports (example with JaCoCo)
                    echo "Generating code coverage report"
                    sh "mvn jacoco:report"
                    // Optionally, display coverage reports or upload them (e.g., to a tool like SonarQube)
                }
            }
        }
    }
}
